<div class="row" style="margin:0; margin-top: 5px; border: 2px solid #34495e; padding: 10px;">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= f.link_to_remove content_tag(:i, content_tag(:span, "删除PAM子项"), :class => 'fa fa-close'), :class => "pull-right", :title => "删除PAM子项" %>
  </div>

  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :pa_no %>
      <%= f.text_field :pa_no %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <span>描述</span>
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <span>数量</span>
      <%= f.text_field :qty %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :total_cost %>
      <%= f.text_field :total_cost %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :applicant %>
      <%= f.text_field :applicant %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :applicant_date %>
      <%= f.date_field :applicant_date %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :supplier %>
      <%= f.text_field :supplier %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :sap_no %>
      <%= f.text_field :sap_no %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :arrive_date %>
      <%= f.text_field :arrive_date %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="marco-igroup-oee">
      <%= f.label :final_release %>
      <%= f.check_box :final_release %>
    </div>
  </div>
</div>
</div>