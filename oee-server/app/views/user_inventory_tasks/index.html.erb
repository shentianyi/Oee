<p id="notice"><%= notice %></p>

<h1>User Inventory Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Inventory list</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Type</th>
      <th>Target qty</th>
      <th>Real qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_inventory_tasks.each do |user_inventory_task| %>
      <tr>
        <td><%= user_inventory_task.user %></td>
        <td><%= user_inventory_task.inventory_list %></td>
        <td><%= user_inventory_task.start_time %></td>
        <td><%= user_inventory_task.end_time %></td>
        <td><%= user_inventory_task.type %></td>
        <td><%= user_inventory_task.target_qty %></td>
        <td><%= user_inventory_task.real_qty %></td>
        <td><%= link_to 'Show', user_inventory_task %></td>
        <td><%= link_to 'Edit', edit_user_inventory_task_path(user_inventory_task) %></td>
        <td><%= link_to 'Destroy', user_inventory_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

