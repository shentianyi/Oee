<div id="downtime_codes">
  <ol class="breadcrumb">
    <li>基础数据</li>
    <li><%= link_to '停机代码列表', downtime_codes_path %></li>
    <li>{{action}}</li>
  </ol>

  <hr class="hr-grey"/>

  <%= form_for(downtime_code) do |f| %>
      <% if downtime_code.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(downtime_code.errors.count, "error") %> prohibited this downtime_code from being
              saved:</h2>

            <ul>
              <% downtime_code.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="marco-npanel-default">
        <div class="marco-nheading">
          {{action}}
          <div class="pull-right">
            <button type="submit" class="marco-btn-normal">{{actionBtn}}</button>
          </div>
        </div>

        <div class="marco-nbody row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>停机代码</span>
              <%= f.text_field :nr %>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>停机类型</span>
              <%= f.select(:downtime_type_id, DowntimeType.all.collect { |dtt| [dtt.name, dtt.id] }, {include_blank: false}) %>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>停机描述</span>
              <%= f.text_field :description %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>