<p id="notice"><%= notice %></p>

<h1>Machines</h1>
<div>
  <%= link_to '导入数据', import_machines_path, :class => 'btn btn-primary'%>
</div>

<table>
  <thead>
    <tr>
      <th>Nr</th>
      <th>Machine type</th>
      <th>Oee nr</th>
      <th>Department</th>
      <th>Status</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= machine.nr %></td>
        <td><%= machine.machine_type.nr %></td>
        <td><%= machine.oee_nr %></td>
        <td><%= machine.department.nr %></td>
        <td><%= MachineStatus.display machine.status %></td>
        <td><%= machine.remark %></td>
        <td><%= link_to 'Show', machine %></td>
        <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
        <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

