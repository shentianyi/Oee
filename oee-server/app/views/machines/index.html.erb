<p id="notice"><%= notice %></p>

<h1>Machines</h1>
<div>
  <%= link_to '导入数据', import_machines_path, :class => 'btn btn-primary'%>
</div>


<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @machines %>
    </div>
    <%= will_paginate @machines, :container => false %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>NO.</th>
      <th>Nr</th>
      <th>Machine type</th>
      <th>Oee nr</th>
      <th>Department</th>
      <th>Status</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @machines.each_with_index do |machine, index| %>
      <tr>
        <td><%= index+@machines.offset+1 %></td>
        <td><%= machine.nr %></td>
        <td><%= machine.machine_type.nr %></td>
        <td><%= machine.oee_nr %></td>
        <td><%= machine.department.nr %></td>
        <td><%= MachineStatus.display machine.status %></td>
        <td><%= machine.remark %></td>
        <td><%= link_to 'Show', machine %></td>
        <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
        <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @machines, :container => false %>
</div>

<%= link_to 'New Machine', new_machine_path %>
