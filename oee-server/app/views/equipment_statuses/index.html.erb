<p id="notice"><%= notice %></p>

<h1>Equipment Statuses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>状态分组</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_statuses.each do |equipment_status| %>
      <tr>
        <td><%= equipment_status.name %></td>
        <td><%= equipment_status.desc %></td>
        <td><%= EquipmentStatusGroupEnum.display equipment_status.group_id %></td>
        <td><%= link_to 'Show', equipment_status %></td>
        <td><%= link_to 'Edit', edit_equipment_status_path(equipment_status) %></td>
        <td><%= link_to 'Destroy', equipment_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

