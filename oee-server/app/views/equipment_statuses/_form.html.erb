<div id="equipment_status">
  <ol class="breadcrumb">
    <li>设备跟踪</li>
    <li><%= link_to '设备状态列表', equipment_statuses_path %></li>
    <li>{{action}}</li>
  </ol>

  <hr class="hr-grey"/>

  <%= form_for(equipment_status) do |f| %>
      <% if equipment_status.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(equipment_status.errors.count, "error") %> prohibited this downtime_type from being
              saved:</h2>

            <ul>
              <% equipment_status.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="marco-npanel-default">
        <div class="marco-nheading">
          {{action}}
          <div class="pull-right">
            <button type="submit" class="marco-btn-normal">{{actionBtn}}</button>
          </div>
        </div>

        <div class="marco-nbody row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>名称</span>
              <%= f.text_field :name %>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>描述</span>
              <%= f.text_field :desc %>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <%= f.label :group_id, '状态分组' %>
              <%= f.select(:group_id, EquipmentStatusGroupEnum.menu, {include_blank: false}, {include_blank: false}) %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>