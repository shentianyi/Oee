<p id="notice"><%= notice %></p>

<h1>Equipment Releases</h1>

<div class="marco-nheading">
  设备放行表
  <div class="pull-right">
    <%= link_to content_tag(:i, content_tag(:span, "导入数据 "), :class => "fa fa-cloud-upload"), import_equipment_releases_path %>

    <%= link_to content_tag(:i, content_tag(:span, "新建"), :class => "fa fa-plus-square"), new_equipment_release_path %>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>所属设备编号</th>
      <th>放行序号</th>
      <th>放行时间</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_releases.each do |equipment_release| %>
      <tr>
        <td><%= equipment_release.equipment_track.nr %></td>
        <td><%= equipment_release.release_index %></td>
        <td><%= equipment_release.release_time.localtime.strftime('%Y/%m/%d') %></td>
        <td><%= link_to 'Show', equipment_release %></td>
        <td><%= link_to 'Edit', edit_equipment_release_path(equipment_release) %></td>
        <td><%= link_to 'Destroy', equipment_release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

