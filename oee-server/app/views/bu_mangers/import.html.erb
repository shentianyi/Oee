<p id="notice"><%= notice %></p>

<div id="bu_mangers">
  <ol class="breadcrumb">
    <li>固定资产</li>
    <li><%= link_to 'BU管理', bu_mangers_path %></li>
    <li>{{action}}</li>
  </ol>

  <hr class="hr-grey"/>

  <form>
    <fieldset>
      <legend style="width: 160px;">{{action}}</legend>

      <div>
        <b>选择数据文件：</b>
        <input id="item-data-uploader" type="file" name="files[]" data-url="/bu_mangers/import"/>

        <hr class="hr-grey"/>

        <div id="item-data-uploader-preview">
          处理信息
        </div>
      </div>

      <div>
        <b>下载模板：</b>
        <a href="/files/<%= ImportTemplate.bu_manger_excel_template %>">
          <%= ImportTemplate::BU_MANGER_EXCEL_TEMPLATE %></a>
      </div>
    </fieldset>
  </form>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    data_upload("#item-data-uploader");
  });
</script>