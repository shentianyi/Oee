<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
  <li>固定资产</li>
  <li>BU管理</li>
</ol>

<hr class="hr-grey"/>

<div class="marco-npanel-default">
  <div class="marco-nheading">
    Bu列表
    <div class="pull-right">
      <%= link_to content_tag(:i, content_tag(:span, "导入数据 "), :class => "fa fa-cloud-upload"), import_bu_mangers_path %>

      <%= link_to content_tag(:i, content_tag(:span, "新建"), :class => "fa fa-plus-square"), new_bu_manger_path %>
    </div>
  </div>
  <div style="overflow: auto; padding: 0;">
    <table class="marco-nbody table table-bordered">

      <thead>
      <tr>
        <th>Nr</th>
        <th>Name</th>
        <th>Finance nr</th>
        <th>Desc</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @bu_mangers.each do |bu_manger| %>
          <tr>
            <td><%= bu_manger.nr %></td>
            <td><%= bu_manger.name %></td>
            <td><%= bu_manger.finance_nr %></td>
            <td><%= bu_manger.desc %></td>
            <td>
              <%= link_to content_tag(:i, '', :class => 'fa fa-eye'), bu_manger, :class => "marco-btn-success", :title => "详情" %>

              <%= link_to content_tag(:i, '', :class => 'fa fa-pencil'), edit_bu_manger_path(bu_manger), :class => "marco-btn-primary", :title => "编辑" %>

              <%= link_to content_tag(:i, '', :class => 'fa fa-close'), bu_manger, method: :delete, data: {confirm: 'Are you sure?'}, :class => "marco-btn-danger", :title => "删除" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>