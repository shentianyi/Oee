<p id="notice"><%= notice %></p>

<h1>Bu Mangers</h1>

<div class="marco-nheading">
  Bu列表
  <div class="pull-right">
    <%= link_to content_tag(:i, content_tag(:span, "导入数据 "), :class => "fa fa-cloud-upload"), import_bu_mangers_path %>
    <%= link_to content_tag(:i, content_tag(:span, "新建"), :class => "fa fa-plus-square"), new_bu_manger_path %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nr</th>
      <th>Name</th>
      <th>Finance nr</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bu_mangers.each do |bu_manger| %>
      <tr>
        <td><%= bu_manger.nr %></td>
        <td><%= bu_manger.name %></td>
        <td><%= bu_manger.finance_nr %></td>
        <td><%= bu_manger.desc %></td>
        <td><%= link_to 'Show', bu_manger %></td>
        <td><%= link_to 'Edit', edit_bu_manger_path(bu_manger) %></td>
        <td><%= link_to 'Destroy', bu_manger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

