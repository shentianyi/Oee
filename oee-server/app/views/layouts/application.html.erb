<!DOCTYPE html>
<html>
<head>
  <title>OeeServer</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
</head>

<body>
  <div class="main">
    <div class="main-nav">
      <ul>
        <li class="nav-active nav-bar">
          <%= link_to content_tag(:i, '', :class => 'fa fa-home'), root_path, :title => '主页' %>
          <span>主页</span>
        </li>

        <li class="nav-bar">
          <%= link_to content_tag(:i, '', :class => 'fa fa-users'), users_path, :title => '用户管理' %>
          <span>用户</span>
        </li>

        <li class="nav-bar">
          <%= link_to content_tag(:i, '', :class => 'fa fa-gavel'), crafts_path, :title => '工艺' %>
          <span>工艺</span>
        </li>

        <li class="nav-bar">
          <%= link_to content_tag(:i, '', :class => 'fa fa-tasks'), departments_path, :title => '部门'%>
          <span>部门</span>
        </li>

        <li class="nav-bar">
          <a href="#">
            <i class="fa fa-flash" style="font-size:1.2em;"></i>
          </a>
          <span>停机</span>
          <ul>
            <li>
              <i class="fa fa-list-ol"></i>
              <%= link_to content_tag(:span, '停机代码'), downtime_codes_path, :title => '停机代码'%>
            </li>

            <li>
              <i class="fa fa-th-list"></i>
              <%= link_to content_tag(:span, '停机类型'), downtime_types_path, :title => '停机类型'%>
            </li>

            <li>
              <i class="fa fa-file-text"></i>
              <%= link_to content_tag(:span, '停机记录'), downtime_records_path, :title => '停机记录'%>
            </li>

            <li class="nav-bar">
              <%= link_to content_tag(:i, '', :class => 'fa fa-tasks'), display_downtime_records_path, :title => '报告', :style => 'font-size: 2.4em;' %>
              <span>报告</span>
            </li>
          </ul>
        </li>
       
        <li class="nav-bar">
          <a href="#">
            <i class="fa fa-wrench"></i>
          </a>
          <span>机器</span>
          <ul>
            <li>
              <i class="fa fa-list-ol"></i>
              <%= link_to content_tag(:span, '标准工时'), work_times_path, :title => '标准工时'%>
            </li>

            <li>
              <i class="fa fa-th-list"></i>
              <%= link_to content_tag(:span, '机器类型'), machine_types_path, :title => '停机类型'%>
            </li>

            <li>
              <i class="fa fa-file-text"></i>
              <%= link_to content_tag(:span, '机器'), machines_path, :title => '机器'%>
            </li>
          </ul>
        </li>

        <li class="nav-bar">
          <a href="#">
            <i class="fa fa-cog"></i>
          </a>
          <span>设置</span>
          <ul>
            <li>
              <i class="fa fa-sort-numeric-asc"></i>
              <%= link_to content_tag(:span, '班次设置'), work_shifts_path, :title => '班次设置'%>
            </li>

            <li>
              <i class="fa fa-calendar"></i>
              <%= link_to content_tag(:span, '节假日'), holidays_path, :title => '节假日'%>
            </li>

          </ul>
        </li>

        <!--<li class="nav-bar">-->
        <!--<%#= link_to content_tag(:i, '', :class => 'fa fa-recycle'), users_path, :title=>'报废' %>-->
        <!--<span>报废</span>-->
        <!--</li>-->

        <li class="nav-bar">
          <%= link_to content_tag(:i, '', :class => 'fa fa-power-off'), destroy_user_session_path, method: :delete %>
          <span title="<%= current_user.email %>"><%= current_user.name %></span>
        </li>
      </ul>
    </div>

    <div class="main-content">
      <%= yield %>
    </div>

  </div>

  <script type="text/javascript">
    layout.init();
  </script>
</body>

<%= yield :javascript_includes %>
</html>
