<div id="downtime_types">
  <ol class="breadcrumb">
    <li>基础数据</li>
    <li><%= link_to '停机类型列表', downtime_types_path %></li>
    <li>{{action}}</li>
  </ol>

  <hr class="hr-grey"/>

  <%= form_for(downtime_type) do |f| %>
      <% if downtime_type.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(downtime_type.errors.count, "error") %> prohibited this downtime_type from being
              saved:</h2>

            <ul>
              <% downtime_type.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="marco-npanel-default">
        <div class="marco-nheading">
          {{action}}
          <div class="pull-right">
            <button type="submit" class="marco-btn-normal">{{actionBtn}}</button>
          </div>
        </div>

        <div class="marco-nbody row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>编号</span>
              <%= f.text_field :nr %>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>名称</span>
              <%= f.text_field :name %>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>描述</span>
              <%= f.text_field :description %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>