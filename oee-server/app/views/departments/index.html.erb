<p id="notice"><%= notice %></p>

<h1>Departments</h1>


<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @departments %>
    </div>
    <%= will_paginate @departments, :container => false %>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>NO.</th>
      <th>Nr</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @departments.each_with_index do |department, index| %>
      <tr>
        <td><%= index+@departments.offset+1 %></td>
        <td><%= department.nr %></td>
        <td><%= department.name %></td>
        <td><%= department.description %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @departments, :container => false %>
</div>

<%= link_to 'New Department', new_department_path %>
