<div id="crafts">
  <ol class="breadcrumb">
    <li>基础数据</li>
    <li><%= link_to '工艺列表', crafts_path %></li>
    <li>{{action}}</li>
  </ol>

  <hr class="hr-grey"/>

  <%= form_for(craft) do |f| %>

      <% if craft.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(craft.errors.count, "error") %> prohibited this craft from being saved:</h2>
            <ul>
              <% craft.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="marco-npanel-default">
        <div class="marco-nheading">
          {{action}}
          <div class="pull-right">
            <button type="submit" class="marco-btn-normal">{{actionBtn}}</button>
          </div>
        </div>

        <div class="marco-nbody row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>工艺</span>
              <%= f.text_field :nr %>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="marco-igroup-oee">
              <span>工艺描述</span>
              <%= f.text_field :description %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>