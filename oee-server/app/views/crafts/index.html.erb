<p id="notice"><%= notice %></p>

<h1>Crafts</h1>
<div>
  <%= link_to '导入数据', import_crafts_path, :class => 'btn btn-primary'%>
</div>


<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @crafts %>
    </div>
    <%= will_paginate @crafts, :container => false %>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>NO.</th>
      <th>Nr</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @crafts.each_with_index do |craft, index| %>
      <tr>
        <td><%= index+@crafts.offset+1 %></td>
        <td><%= craft.nr %></td>
        <td><%= craft.description %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @crafts, :container => false %>
</div>

<%= link_to 'New Craft', new_craft_path %>
