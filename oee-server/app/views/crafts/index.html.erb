<p id="notice"><%= notice %></p>

<h1>Crafts</h1>
<div>
  <%= link_to '导入数据', import_crafts_path, :class => 'btn btn-primary'%>
</div>

<table>
  <thead>
    <tr>
      <th>Nr</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crafts.each do |craft| %>
      <tr>
        <td><%= craft.nr %></td>
        <td><%= craft.description %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Craft', new_craft_path %>
