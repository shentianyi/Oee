<p id="notice"><%= notice %></p>

<h1>Machine Types</h1>

<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @machine_types %>
    </div>
    <%= will_paginate @machine_types, :container => false %>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>NO.</th>
      <th>Nr</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @machine_types.each_with_index do |machine_type, index| %>
      <tr>
        <td><%= index+@machine_types.offset+1 %></td>
        <td><%= machine_type.nr %></td>
        <td><%= machine_type.description %></td>
        <td><%= link_to 'Show', machine_type %></td>
        <td><%= link_to 'Edit', edit_machine_type_path(machine_type) %></td>
        <td><%= link_to 'Destroy', machine_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate @machine_types, :container => false %>
</div>

<%= link_to 'New Machine Type', new_machine_type_path %>
